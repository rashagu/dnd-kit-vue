{
  "exclude": ["./**/*.spec.*","./**/_stories/.*","./**/_stories/.*","./**/__stories__/.*",
    "./main.ts", "../script/*",
    "./Comp1",
    "./App.tsx",
    "./**/__test__",
    "./test/*",
    "./*.ts"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/types",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "strictNullChecks": false,
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["vite/client", "node"],
    "lib": ["esnext", "dom"],
    "noImplicitAny": false
  }
}
